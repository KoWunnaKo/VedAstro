    @*KO-FI WIDGET*@
    <div class="me-5" style="">
        <iframe id='kofiframe' src='@URL.KoFiDonateIframe' style="width: @GR.W412px; height: 557px;" class="border shadow rounded-4" title='vedastro'></iframe>
    </div>

    @*STACK BOXES ON RIGHT*@
    <div class="ms-md-5">
        <div class="gap-3">
            <p>
                Free Gifts:
            </p>
